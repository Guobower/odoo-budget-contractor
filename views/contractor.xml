<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!--START VIEWS-->
        <!--START FORM VIEW-->
        <record model="ir.ui.view" id="view_form_contractor">
            <field name="name">Contractor</field>
            <field name="model">budget.contractor.contractor</field>
            <field name="arch" type="xml">
                <form string="Contractor">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-users">
                                <field name="contract_count" widget="statinfo" string="Contracts"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <group groups="base.group_system">
                                <field name="partner_id"/>
                            </group>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="alias" required="1"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                </div>
                                <field name="website" widget="url" placeholder="e.g. www.etisalat.com"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Contacts">
                                <field name="contact_ids" mode="kanban">
                                    <kanban>
                                        <field name="name"/>
                                        <field name="function"/>
                                        <field name="email"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click o_res_partner_kanban">
                                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                                    <div class="o_kanban_image">
                                                        <img t-att-src="_s + &quot;/base/static/src/img/avatar.png&quot;"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <div>
                                                            <strong>
                                                                <field name="name"/>
                                                            </strong>
                                                        </div>
                                                        <div>
                                                            <field name="email"/>
                                                        </div>
                                                        <div>
                                                            <field name="function"/>
                                                        </div>
                                                        <div>
                                                            <field name="phone"/>
                                                        </div>
                                                        <div>
                                                            <field name="mobile"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name"/>
                                                    <field name="email"/>
                                                </group>
                                                <group>
                                                    <field name="function"/>
                                                    <field name="phone"/>
                                                    <field name="mobile"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Contracts">
                                <field name="contractor_contract_ids"
                                       context="{'default_new_contractor_id': id}"
                                />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--END FORM VIEW-->

        <!--START TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_contractor">
            <field name="name">Contractor</field>
            <field name="model">budget.contractor.contractor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="state"/>
                </tree>
             </field>
        </record>
        <!--END TREE VIEW-->

        <!--START KANBAN VIEW-->
        <record model="ir.ui.view" id="view_kanban_contractor">
            <field name="name">Contractor</field>
            <field name="model">budget.contractor.contractor</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <div class="o_kanban_image">
                                    <img t-att-src="_s + &quot;/base/static/src/img/company_image.png&quot;"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_heading">
                                        <field name="name"/>
                                    </strong>
                                    <div class="oe_kanban_partner_links"/>
                                    <div>
                                        <field name="website"/>
                                    </div>
                                    <!--<div><field name="street"/></div>-->
                                    <!--<div><field name="street2"/></div>-->
                                    <div>
                                        <field name="city"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!--END KANBAN VIEW-->

        <!--START SEARCH-->
        <record model="ir.ui.view" id="view_search_contractor">
            <field name="name">Budget Search</field>
            <field name="model">budget.contractor.contractor</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <!--END SEARCH-->

        <!--START ACTION-->
        <record model="ir.actions.act_window" id="action_contractor">
            <field name="name">Contractor</field>
            <field name="res_model">budget.contractor.contractor</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_kanban_contractor"/>
            <field name="search_view_id" ref="view_search_contractor"/>
            <field name="domain"></field>
            <field name="context">
                {'form_view_ref': 'budget_contractor.view_form_contractor',
                 'tree_view_ref': 'budget_contractor.view_tree_contractor'}
            </field>
        </record>
        <!--END ACTION-->

    </data>
</openerp>