<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--START VIEWS-->
        <!--START FORM VIEW-->
        <record model="ir.ui.view" id="view_form_contract">
            <field name="name">budget.contractor.contract.form</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <form string="Contract">
                    <header>
                        <button
                                string="Close Contract"
                                name="set2close"
                                type="object"
                                states="active"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="contract_ref" readonly='1' default_focus="1"
                                       placeholder="Contract Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="section_ids"
                                       widget="many2many_tags"
                                       context="{'form_view_ref': 'budget_enduser.view_form_section',
                                                 'default_is_budget_section': True}}"
                                       options="{'no_quick_create': True,
                                                 'no_create_edit': True}"
                                />
                                <field name="contractor_id"
                                       context="{'form_view_ref': 'budget_contractor.view_form_contractor',
                                                 'default_is_budget_contractor': True}}"/>
                            </group>
                            <group>
                                <field name="is_contract"/>
                                <field name="is_rfq"/>
                                <field name="no"/>
                                <field name="change_type"/>
                                <field name="version"/>
                                <field name="sicet_type_ids"
                                       widget="many2many_tags"
                                       options="{'no_quick_create': True,
                                                 'no_create_edit': True}"
                                />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="amount"/>
                                <field name="service_amount"/>
                                <field name="material_amount"/>
                            </group>
                            <group>
                                <field name="sign_date"/>
                                <field name="commencement_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="remarks"/>
                        </group>
                        <notebook>
                            <page string="RFS Certificates">
                                <field name="rfs_ids"
                                       context="{'default_contract_id': id}"
                                />
                            </page>
                            <page string="Milestones">
                                <field name="milestone_ids"
                                       context="{'default_contract_id': id}"
                                />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--END FORM VIEW-->

        <!--START TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_contract">
            <field name="name">budget.contractor.contract.tree</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contract_ref"/>
                    <!--TODO FIND A WAY TO DISPLAY many2many LIKE BUTTONS-->
                    <field name="sicet_type_ids" widget="many2many_tags"/>
                    <field name="amount"/>
                    <field name="commencement_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--END TREE VIEW-->

        <!--START SEARCH VIEW-->
        <record model="ir.ui.view" id="view_search_contract">
            <field name="name">budget.contractor.contract.search</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <search>
                    <field name="contract_ref"/>
                    <filter
                            name="filter_state"
                            string="Active"
                            domain="[('state', 'in', ['active'])]"/>
                </search>
            </field>
        </record>
        <!--END SEARCH VIEW-->

        <!--START ACTION-->
        <record model="ir.actions.act_window" id="action_contract">
            <field name="name">Contract</field>
            <field name="res_model">budget.contractor.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="view_tree_contract"/>
            <field name="search_view_id" ref="view_search_contract"/>
            <field name="context">
                {'form_view_ref': 'budget_contractor.view_form_contract',
                'search_default_filter_state': 1}
            </field>
        </record>
        <!--END ACTION-->
    </data>
</openerp>