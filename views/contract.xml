<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--START VIEWS-->
        <!--START FORM VIEW-->
        <record model="ir.ui.view" id="view_form_contract">
            <field name="name">budget.contractor.contract.form</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <form string="Contract">
                    <header>
                        <!-- TODO MAKE BUTTONS -->
                        <!--<button-->
                        <!--string="Close Contract"-->
                        <!--name="set2close"-->
                        <!--type="object"-->
                        <!--states="active"/>-->
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="contract_ref"/>
                            </h1>
                        </div>
                        <notebook name="top">
                            <page string="General">
                                <group>
                                    <group>
                                        <field name="new_contractor_id"/>
                                        <field name="no"/>
                                        <field name="year"/>
                                        <field name="change_type"/>
                                        <field name="version"
                                               attrs="{'invisible': [('change_type','not in',['addendum', 'amendment'])]}"/>
                                        <field name="sicet_type_ids"
                                               widget="many2many_tags"
                                               options="{'no_quick_create': True,
                                                 'no_create_edit': True}"/>
                                        <field name="contract_type"/>
                                        <field name="delivery_term"/>
                                        <field name="network_type"/>
                                        <field name="network_layer"/>
                                        <field name="system_type"/>
                                        <field name="opex_service"/>
                                    </group>
                                    <group>
                                        <field name="is_capex"/>
                                        <field name="is_opex"/>
                                        <field name="sign_date"/>
                                        <field name="commencement_date"/>
                                        <field name="end_date"/>
                                        <field name="owner"/>
                                        <field name="new_section_ids"
                                               widget="many2many_tags"
                                               options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                        <field name="new_sub_section_ids"
                                               widget="many2many_tags"
                                               options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                        <field name="volume_discount_ref"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="description"/>
                                </group>
                                <group>
                                    <field name="remark"/>
                                </group>
                            </page>
                            <page string="Numerics">
                                <group>
                                    <group>
                                        <field name="year_count"/>
                                        <field name="foc_service_month_count"/>
                                        <field name="extended_warranty_count"/>
                                        <field name="support_percentage"/>
                                        <field name="maintenance_percentage"/>
                                        <field name="spare_percentage"/>
                                    </group>
                                    <group>
                                        <field name="amount"/>
                                        <field name="cost_per_month"/>
                                        <field name="cost_per_year"/>
                                        <field name="hardware_amount"/>
                                        <field name="software_amount"/>
                                        <field name="service_amount"/>
                                        <field name="future_voucher_amount"/>
                                        <field name="voucher_utilized_amount"/>
                                        <field name="foc_service_amount"/>
                                        <field name="extended_warranty_amount"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>

                        <notebook name="bottom">
                            <page string="RFS Certificates">
                                <field name="rfs_ids"
                                       context="{'default_new_contract_id': id}"
                                />
                            </page>
                            <page string="Milestones">
                                <field name="milestone_ids" context="{'default_new_contract_id': id}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--END FORM VIEW-->

        <!--START TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_contract">
            <field name="name">budget.contractor.contract.tree</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contract_ref"/>
                    <!--TODO FIND A WAY TO DISPLAY many2many LIKE BUTTONS-->
                    <field name="sicet_type_ids" widget="many2many_tags"/>
                    <field name="amount"/>
                    <field name="commencement_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--END TREE VIEW-->

        <!--START SEARCH VIEW-->
        <record model="ir.ui.view" id="view_search_contract">
            <field name="name">budget.contractor.contract.search</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <search>
                    <field name="contract_ref"/>
                    <filter
                            name="filter_state"
                            string="Active"
                            domain="[('state', 'in', ['draft'])]"/>
                </search>
            </field>
        </record>
        <!--END SEARCH VIEW-->

        <!--START ACTION-->
        <record model="ir.actions.act_window" id="action_contract">
            <field name="name">Contract</field>
            <field name="res_model">budget.contractor.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="view_tree_contract"/>
            <field name="search_view_id" ref="view_search_contract"/>
            <field name="context">
                {'form_view_ref': 'budget_contractor.view_form_contract',
                'search_default_filter_state': 1}
            </field>
        </record>
        <!--END ACTION-->
    </data>
</odoo>