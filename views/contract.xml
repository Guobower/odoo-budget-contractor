<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!--START CONTRACTOR VIEWS-->
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_form_contract">
            <field name="name">Contract</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <form string="Contract">
                <header>
                    <button
                        string="Close Contract"
                        name="set2close"
                        type="object"
                        states="active" />
                    <field name="state" widget="statusbar"/>
                </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="contract_ref" readonly='1' default_focus="1" placeholder="Contract Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="section_ids"
                                       widget="many2many_tags"
                                       context="{'form_view_ref': 'budget_enduser.view_form_section',
                                                 'default_is_budget_section': True}}"
                                />
                                <field name="contractor_id"
                                       context="{'form_view_ref': 'budget_contractor.view_form_contractor',
                                                 'default_is_budget_contractor': True}}"/>
                                <field name="budget_id"/>

                            </group>
                            <group>
                                <field name="contract_no"/>
                                <field name="change_type"/>
                                <field name="version"/>
                                <field name="sicet_type"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="amount"/>
                                <field name="service_amount"/>
                                <field name="material_amount"/>
                            </group>
                            <group>
                                <field name="sign_date"/>
                                <field name="commencement_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="remarks"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--CONTRACTOR TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_contract">
            <field name="name">Contract</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contract_ref"/>
                    <field name="sicet_type"/>
                    <field name="amount"/>
                    <field name="commencement_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
             </field>
        </record>
    <!--END CONTRACTOR VIEWS-->
    <!--SEARCH VIEWS-->
        <record model="ir.ui.view" id="view_search_contract">
            <field name="name">budget.contract.search</field>
            <field name="model">budget.contractor.contract</field>
            <field name="arch" type="xml">
                <search string="Contracts">
                    <field name="contract_ref" string="Contract Reference"/>
                    <field name="contractor_id" string="Contractor"/>
                </search>
            </field>
        </record>
    <!--END SEARCH VIEWS-->

    <!--START ACTIONS-->
        <!--Contract Action-->
        <record model="ir.actions.act_window" id="action_contract">
            <field name="name">Contract</field>
            <field name="res_model">budget.contractor.contract</field>
            <field name="search_view_id" ref="view_search_contract"/>
        </record>

        <!--Override View-->
        <!--Override Default View-->
        <record model="ir.actions.act_window.view" id="action_contract_view_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_contract"/>
            <field name="act_window_id" ref="action_contract"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_contract_view_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_contract"/>
            <field name="act_window_id" ref="action_contract"/>
        </record>
    <!--END ACTIONS-->
    </data>
</openerp>