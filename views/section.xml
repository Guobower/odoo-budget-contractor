<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START CONTRACTOR VIEWS-->
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_form_section">
            <field name="name">Section</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Section">
                    <sheet>
                        <group>
                            <field name="is_budget_section" invisible="1"/>
                            <field name="name"/>
                            <field name="alias"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <!--START ACTIONS-->
        <!--Section Action-->
        <record model="ir.actions.act_window" id="action_section">
            <field name="name">Section</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_budget_section','=',True)]</field>
            <field name="context">{'default_is_budget_section': True}</field>
        </record>

        <!--Override View-->
        <!--Override Default View-->
        <!--<record model="ir.actions.act_window.view" id="action_section_view_kanban">-->
            <!--<field name="sequence" eval="1"/>-->
            <!--<field name="view_mode">kanban</field>-->
            <!--<field name="view_id" ref="view_kanban_section"/>-->
            <!--<field name="act_window_id" ref="action_section"/>-->
        <!--</record>-->

        <record model="ir.actions.act_window.view" id="action_section_view_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_section"/>
            <field name="act_window_id" ref="action_section"/>
        </record>
    <!--END ACTIONS-->
    </data>
</openerp>